<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>Cadastrar Usuário</h1>
        <form action="/usuarioCreate" method="POST">
            <div class="form-group">
                <label for="campoLogin">Matrícula</label>
                <input type="text" class="form-control" id="campoLogin" name="login">
            </div>
            <div class="form-group">
                <label for="campoSenha">Senha</label>
                <input type="password" class="form-control" id="campoSenha" name="senha">
            </div>
            <div class="form-group">
                <label for="campoTipo">Tipo</label>
                <select class="form-control" id="campoTipo" name="tipo" onchange="mostrarCampoCodigo()">
                    <option value="ouvinte">Ouvinte</option>
                    <option value="admin">Admin</option>
                    <option value="candidato">Candidato</option>
                </select>
            </div>
            <div class="form-group" id="campoCodigo" style="display: none;">
                <label for="campoCodigo">Código</label>
                <input type="text" class="form-control" id="campoCodigo" name="codigo">
            </div>
            <div class="form-group">
                <label for="campoPergunta">Pergunta Secreta</label>
                <input type="text" class="form-control" id="campoPergunta" name="pergunta">
            </div>
            <div class="form-group">
                <label for="campoResposta">Resposta Secreta</label>
                <input type="text" class="form-control" id="campoResposta" name="resposta">
            </div>
            <button type="submit" class="btn btn-dark">Cadastrar</button>
        </form>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        function mostrarCampoCodigo() {
            const tipoSelecionado = document.getElementById("campoTipo").value;
            const campoCodigo = document.getElementById("campoCodigo");

            if (tipoSelecionado === "admin") {
                campoCodigo.style.display = "block";
            } else {
                campoCodigo.style.display = "none";
            }
        }
    </script>
</body>

</html>